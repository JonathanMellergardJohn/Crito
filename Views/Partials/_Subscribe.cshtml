@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

 <!-- News Letter -->
    <section class="bg-secondary py-20">
      <div class="container flex justify-around">
        <h2 class="font-bold text-4xl">Get News Updates By Signup</h2>
        <form action="post">
          <input type="email" placeholder="your@email.com" class="py-2 px-10 rounded-full mr-2">
          <button type="submit" class="text-black bg-primary border rounded-full py-2 px-6 mr-3 hover:bg-primary-light transition">Subscribe<i class="ml-2 fa-light fa-arrow-up-right"></i></button>
        </form>
      </div>
    </section>